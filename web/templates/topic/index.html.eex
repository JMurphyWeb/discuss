<h1 class="dib">All Topics</h1>
<%= link to: topic_path(@conn, :new), class: "f6 ml5 dib bg-white black pa2 ba" do %>
  Add Topic
<% end %>

<ul>
  <%= for t <- @topics do %>
    <li>
      <%= t.title %>
      <%= if @conn.assigns.user.id == t.user_id do %>
        <%= link "Edit", to: topic_path(@conn, :edit, t) %>
        <%= link "Delete", to: topic_path(@conn, :delete, t), method: :delete %>
      <% end %>
    </li>
  <% end %>


</ul>
